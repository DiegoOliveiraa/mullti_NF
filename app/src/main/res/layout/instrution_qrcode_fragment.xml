<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/standard">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_soon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/ic_nf_without_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_nfce_or_nfe"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="24dp"
        android:gravity="center"
        android:lineSpacingExtra="2sp"
        android:text="Leitura da NFCe \nou NFe"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:transformPivotY="-1.25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_soon"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_instruction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:gravity="center"
        android:lineSpacingExtra="2sp"
        android:text="Agora você deve realizar a leitura da \nnota fiscal clicando no botão abaixo."
        android:textColor="@color/white"
        android:textSize="20sp"
        android:transformPivotY="-1.25sp"
        app:fontFamily="roboto "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_nfce_or_nfe"
        tools:ignore="MissingConstraints" />


    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/button_read_qrcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:text="Ler QRcode"
        app:cornerRadius="1000dp"
        app:icon="@drawable/ic_qrcode"
        app:iconGravity="textStart"
        app:iconSize="40dp"
        app:layout_constraintEnd_toEndOf="@+id/text_instruction"
        app:layout_constraintStart_toStartOf="@+id/text_instruction"
        app:layout_constraintTop_toBottomOf="@+id/text_instruction" />

</androidx.constraintlayout.widget.ConstraintLayout>